@model bandienthoai.Entities.NguoiDung
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/MyLayout2.cshtml";
    string urlImg = "~/Assets/Admin/img/" + Model.HinhAnh;
    var ngaysinh = Model.NgaySinh.ToString("dd/MM/yyyy");
}
<div style="margin-left: 200px;">
    <h4>Thông tin tài khoản</h4>
    <hr />

    <div class="imageUser" style="margin-left: 65px;">
        <img src="@Url.Content(urlImg)" height="200" width="200" style="border:2px solid #676565; border-radius:80px" />
    </div>

    <hr />

    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoan)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SDT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>

        <dd>
            @ngaysinh
        </dd>

    </dl>

    <p>
    @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = Model.MaNguoiDung })
    </p>
</div>


