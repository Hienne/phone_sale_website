@model bandienthoai.Entities.NguoiDung

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/MyLayout2.cshtml";
    string urlImg = "~/Assets/Customer/img/" + Model.HinhAnh;
    string ngaysinh = Model.NgaySinh.ToString("dd/MM/yyyy");
}

@using (Html.BeginForm("ChinhSua", "NguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="signup-container">
        <h1>Chỉnh sửa</h1>
        @Html.HiddenFor(model => model.MaNguoiDung)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen)
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { placeholder = "Nhập họ tên", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan)
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { placeholder = "Nhập tài khoản", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT)
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { placeholder = "Nhập số điện thoại", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi)
            @Html.EditorFor(model => model.DiaChi, new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập địa chỉ", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập email", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgaySinh, "{0:26/03/1999}", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GioiTinh)
            @Html.RadioButtonFor(model => model.GioiTinh, "nam") @Html.Label("Nam")
            @Html.RadioButtonFor(model => model.GioiTinh, "nữ") @Html.Label("Nữ")
            @Html.RadioButtonFor(model => model.GioiTinh, "khác") @Html.Label("Giới tính khác")
            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.UploadHinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img src="@Url.Content(urlImg)" style="margin:10px; border:2px solid #676565; border-radius:100px" height="200" width="200" id="imagePreview" />
                    <input type="file" name="UploadHinhAnh" accept="image/jpeg, image/png, image/jpg" onchange="ShowImagePreview(this, document.getElementById('imagePreview'))" />
                </div>
            </div>
        </div>

        <button type="submit" class="signupbtn">Save</button>

    </div>
}

<style>
    .signup-container {
        width: 980px;
        margin: auto;
        margin: 10px auto;
        padding: 10px;
        border: 1px solid #ccc;
        overflow: hidden;
        position: relative;
    }

        .signup-container h1 {
            margin-bottom: 25px;
        }

    .input-signup {
        width: 100%;
        padding: 15px;
        /*margin: 5px 0 22px 0;*/
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

        .input-signup:focus {
            background-color: #ddd;
            outline: none;
        }

    .birth-of-date {
        margin-bottom: 20px;
    }
    /* Set a style for all buttons */
    .signupbtn {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 20px auto;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
        width: 50%;
        display: table;
    }

        .signupbtn:hover {
            opacity: 1;
        }
</style>


