@model IEnumerable<bandienthoai.Entities.PhieuNhap>
@{
    ViewBag.Title = "AllPNInMon";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách phiếu nhập hàng trong ngày</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã phiếu nhập</th>
                        <th>Ngày nhập</th>
                        <th>Nhà cung cấp</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var a in Model)
                    {
                        string ngaynhap = a.NgayNhap.ToString("dd/MM/yyyy");
                        <tr>
                            <td>@a.MaPN</td>
                            <td>@ngaynhap</td>
                            <td>@a.NhaCungCap.TenNCC</td>
                            <td>
                                @Html.ActionLink("Chi tiết", "ChiTietPN", new { id = a.MaPN })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


