@model IEnumerable<bandienthoai.Entities.SanPham>
@{
    ViewBag.Title = "AllSP";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng tồn</th>
                            <th>Số lần mua</th>
                            <th>Đơn giá</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var a in Model)
                        {
                            <tr>
                                <td>@a.MaSP</td>
                                <td>@a.TenSP</td>
                                <td>@a.SLTon</td>
                                <td>@a.SoLanMua</td>
                                <td>@a.DonGia</td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
        @*<div class="card-header py-3">
            @Html.ActionLink("Thêm sản phẩm", "CreateSP")
        </div>*@
    </div>


