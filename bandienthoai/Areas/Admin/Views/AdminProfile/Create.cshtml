@model bandienthoai.Models.SignupModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="signup-container">
        <h1>Đăng ký</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen)
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { placeholder = "Nhập họ tên", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan)
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { placeholder = "Nhập tài khoản", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT)
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { placeholder = "Nhập số điện thoại", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi)
            @Html.EditorFor(model => model.DiaChi, new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập địa chỉ", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập email", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau)
            @Html.EditorFor(model => model.MatKhau, new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập mật khẩu", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.XacNhanMK)
            @Html.EditorFor(model => model.XacNhanMK, new { htmlAttributes = new { placeholder = "Xác nhận mật khẩu", @class = "input-signup" } })
            @Html.ValidationMessageFor(model => model.XacNhanMK, "", new { @class = "text-danger" })
        </div>

        <div class="form-group birth-of-date">
            @Html.LabelFor(model => model.NgaySinh)
            @Html.EditorFor(model => model.NgaySinh, "{0:dd/MM/yyyy}", new { @class = "input-signup", htmlAttributes = new { placeholder = "Nhập ngày sinh" } })
            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GioiTinh)
            @Html.RadioButtonFor(model => model.GioiTinh, "nam") @Html.Label("Nam")
            @Html.RadioButtonFor(model => model.GioiTinh, "nữ") @Html.Label("Nữ")
            @Html.RadioButtonFor(model => model.GioiTinh, "khác") @Html.Label("Giới tính khác")
            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
        </div>


        <button type="submit" class="signupbtn">Đăng ký</button>

    </div>
}

<style>
    .signup-container {
        width: 980px;
        margin: auto;
        margin: 10px auto;
        padding: 10px;
        border: 1px solid #ccc;
        overflow: hidden;
        position: relative;
    }

        .signup-container h1 {
            margin-bottom: 25px;
        }

    .input-signup {
        width: 100%;
        padding: 15px;
        /*margin: 5px 0 22px 0;*/
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

        .input-signup:focus {
            background-color: #ddd;
            outline: none;
        }

    .birth-of-date {
        margin-bottom: 20px;
    }
    /* Set a style for all buttons */
    .signupbtn {
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 20px auto;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
        width: 50%;
        display: table;
    }

        .signupbtn:hover {
            opacity: 1;
        }
</style>


